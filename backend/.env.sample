# Django PostgreSQL Config
DJANGO_SETTINGS_MODULE=compliance_ai_assistant.settings.production
ALLOWED_HOSTS=*
DATABASE_NAME=compliance_ai_assistant
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=db-postgres
DATABASE_PORT=5432

# Embedding Config (OpenAI compatible endpoint)
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIM=3072
EMBEDDING_MAX_TOKEN_SIZE=8192
EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_API_KEY=sk-openai-1234567890

# LLM Config (OpenAI compatible endpoint)
LLM_MODEL=openai/gpt-4.1-mini
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_API_KEY=sk-openrouter-1234567890

# LightRAG PostgreSQL Config
POSTGRES_HOST=db-postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=lightrag
POSTGRES_MAX_CONNECTIONS=20

# LightRAG Neo4j Config (Graph DB)
NEO4J_URI=neo4j://db-neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=lightrag
